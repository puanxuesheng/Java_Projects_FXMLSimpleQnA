<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextArea?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Text fx:id="text" text ="Please type a question here!" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
    <TextArea fx:id="textField" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2" GridPane.rowSpan="5"
               prefWidth="100" prefHeight="500"
    />

    <HBox GridPane.columnIndex="1" GridPane.rowIndex="7" alignment="BOTTOM_RIGHT">
        <Button fx:id="Send" text="Send!" onAction="#handleSendButton"/>
    </HBox>

    <Text fx:id="actiontarget" GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="2"/>

</GridPane>